<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.ijuru.kumva.app"
	android:versionCode="20"
	android:versionName="2.0" >

	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:name=".KumvaApplication"
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name">

		<activity
			android:name=".activity.SearchActivity"
			android:label="@string/app_name"
			android:launchMode="singleTop"
			android:theme="@style/KumvaActionBarTheme">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name=".activity.EntryActivity"
			android:theme="@style/KumvaActionBarTheme">
			<!-- Parent activity meta-data to support 4.0 and lower -->
			<meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".activity.SearchActivity" />
		</activity>

		<activity
			android:name=".activity.PreferencesActivity"
			android:label="@string/str_preferences"
		/>

		<activity
			android:name=".activity.DictionariesActivity"
			android:label="@string/str_dictionaries"
		/>

	</application>

</manifest>
